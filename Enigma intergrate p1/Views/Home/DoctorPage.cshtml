@using Eclinic.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>e-clinic</title>
    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @*<link href="~/Content/Styles.css" rel="stylesheet" />*@
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-animation.css" rel="stylesheet" />
    <link href="~/Content/imagehover.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <script src="~/Scripts/TimeDetails.js"></script>
    <script src="~/Scripts/Hospital.js"></script>
    <style>
        .parallax {
            background-image: url('../../images/doc_scope2.jpg');
            /*opacity:0.65;*/
            min-height: 200px;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .fa {
            color: cornflowerblue;
        }

        .myJumbotron {
            background-color: white;
            height: auto;
            padding: 5px;
        }

        .imgborder {
            padding: 5px 5px 5px;
            background-color: white;
            box-shadow: 0 1px 2px rgba(34,25,25,0.4);
            -moz-box-shadow: 0 1px 2px rgba(34,25,25,0.4);
            -webkit-box-shadow: 0 1px 2px rgba(34,25,25,0.4);
        }

        .hrheight {
            border: 3px solid skyblue;
        }
    </style>
</head>
<body onload="loadHospital()">
    <div>
        <div class="col-md-12 col-xs-12">
            <div class="jumbotron myJumbotron">
                <div style="text-align:center ">
                    <div><p style="text-align:center; color:black; font-family:'Colonna MT'; font-size:80px;">E-clinic</p></div>
                    <!--<div class="animated pulse infinite"><p style="text-align:center; color:black; font-family:'Colonna MT'; font-size:80px;">E-clinic</p></div>-->
                    <a href="Home"><img src="~/images/icon175x175.png" height="175" width="175" alt="logo" /></a>
                    <p style="text-align:center">somthing about the e-clinic.....</p>
                </div>

            </div>

            <div class="container">
                <div>
                    <h2>Doctor's Page</h2>
                </div>
                <div>
                   @{
                       var user = Session["user"] as User;
                }
                @if (user != null)
                {
                    <h3>Welcome Dr: @user.Name</h3>
                }
                </div>
                @*<div>*@
                    
                    <input type="hidden" name="day" value="@user.ID" id="ID">
                    <br /><br />
                    <script src="~/Scripts/TimeDetails.js"></script>
                    <script src="~/Scripts/Hospital.js"></script>
                    <div class="col-md-8"  style="border:double; background-color:lightgray">
                    <div class="row">
                            <div class="col-md-2"><label>Select Hospital:</label></div>
                            <div class="col-md-4"><select id="Hospital"> </select></div> 
                    </div>
                    
                    
                      
                    <br /><br />
                    @{
                        var d = DateTime.Now;
                    }
                    
                    <div class="row">
                        <div class="col-md-2">
                            Select Date: 
                        </div>
                        <div class="col-md-4">
                            <input type="date" id="Sday" value="d"> 
                            to :
                            <input type="date" id="Eday" value="d">
                        </div>
                    </div>

                     
                    <br /><br />
                    
                    <div class="row">
                        <div class="col-md-2">
                            <input type="checkbox" name="day" value="1" id="Mon">Monday Time:
                        </div>
                        <div>
                            <input type="time" id="MStime" value="00:00:00">
                            to
                            <input type="time" id="MEtime" value="00:00:00">
                        </div>                        
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2">
                            <input type="checkbox" name="day" value="2" id="Tue">Tuesday
                            Time:
                        </div>
                        <div>
                            <input type="time" id="TStime" value="00:00:00">
                            to
                            <input type="time" id="TEtime" value="00:00:00">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2">
                            <input type="checkbox" name="day" value="3" id="Wed">Wednesday
                            Time:
                        </div>
                        <div>
                            <input type="time" id="WStime" value="00:00:00">
                            to
                            <input type="time" id="WEtime" value="00:00:00">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2">
                            <input type="checkbox" name="day" value="4" id="Thu">Thursday
                            Time:
                        </div>
                        <div>
                            <input type="time" id="THStime" value="00:00:00">
                            to
                            <input type="time" id="THEtime" value="00:00:00">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2">
                            <input type="checkbox" name="day" value="5" id="Fri">Friday
                            Time:
                        </div>
                        <div>
                            <input type="time" id="FStime" value="00:00:00">
                            to
                            <input type="time" id="FEtime" value="00:00:00">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2">
                            <input type="checkbox" name="day" value="6" id="Sat">Saturday
                            Time:
                        </div>
                        <div>
                            <input type="time" id="SAStime" value="00:00:00">
                            to
                            <input type="time" id="SAEtime" value="00:00:00">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2">
                            <input type="checkbox" name="day" value="0" id="Sun">Sunday
                            Time:
                        </div>
                        <div>
                            <input type="time" id="SUStime" value="00:00:00">
                            to
                            <input type="time" id="SUEtime" value="00:00:00">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2">
                            <input type="submit" value="Submit" onclick="Time()">
                        </div>
                    </div>
                    
                    </div>
            <div class="row">
                <div class="col-md-4"></div>
            </div>
            
                
                <br />
                <br />
                <div class="row">
                    <a href="/PatientLogin/Logout" class="btn btn-primary">Logout</a>
                </div>
            </div>
            
            <hr class="hrheight" />
            <footer>
                @*<p style="font-size:24px">Quick access</p>*@
                <button class="btn-warning btn-lg">Quick access</button>
                <br />
                <div style="background-color:teal; height:auto; padding:15px; text-align:center; opacity:1;">
                    <div class="row">
                        <div class="col-md-1 col-xs-1">
                            <a href="PharmacySearch" target="_blank" class="btn faa-parent animated-hover fa-lg fa-border" title="search nearby pharmacies"><i class="fa fa-map-marker fa-fw faa-tada animated" style="color:orange"></i></a>
                        </div>
                        <div class="col-md-1 col-xs-1">
                            <a href="ReportPage" target="_blank" class="btn faa-parent animated-hover fa-lg fa-border" title="view reports"><i class="fa fa-book fa-fw faa-tada animated" style="color:orange"></i></a>
                        </div>
                    </div>
                </div>
                <br />
                <div style="background-color:#ffffff; height:auto; padding:15px; text-align:center; opacity:1;">
                    <div class="row">
                        <div class="col-md-1 col-xs-1">
                            <a href="https://www.facebook.com/" target="_blank" class="btn faa-parent animated-hover fa-lg fa-border"><i class="fa fa-facebook fa-fw faa-shake"></i></a>
                        </div>
                        <div class="col-md-1 col-xs-1">
                            <a href="https://www.instagram.com/" target="_blank" class="btn faa-parent animated-hover fa-lg fa-border"><i class="fa fa-instagram fa-fw faa-shake"></i></a>
                        </div>
                        <div class="col-md-1 col-xs-1">
                            <a href="https://plus.google.com/" target="_blank" class="btn faa-parent animated-hover fa-lg fa-border"><i class="fa fa-google-plus fa-fw faa-shake"></i></a>
                        </div>
                        <div class="col-md-1 col-xs-1">
                            <a href="https://mail.google.com/mail/u/0/#inbox?compose=new/" target="_blank" class="btn faa-parent animated-hover fa-lg fa-border"><i class="fa fa-envelope fa-fw faa-shake"></i></a>
                        </div>
                    </div>
                </div>
                <br />
                <a href="Services" class="afontwhite">Services</a>&nbsp;&nbsp;&nbsp;<a href="AboutUs" class="afontwhite">About Us</a>&nbsp;&nbsp;&nbsp;<a href="ContactUs" class="afontwhite">Contact Us</a>&nbsp;&nbsp;&nbsp;<a href="Developer" class="afontwhite">Developer</a>&nbsp;&nbsp;&nbsp;<a href="AdminLogin" class="afontwhite">Admin</a>
                <p>&copy;&nbsp;Enigma.All Right Reserved &nbsp; @DateTime.Now &nbsp;All Right Reserved</p>
                <div class="display-field">
                </div>
            </footer>
        </div>
    </div>
</body>
</html>